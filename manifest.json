{
  "name": "Hex-Grid",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Show grid lines directly on any web page and also calculate pixel distances between elements.",
  "browser_action": {
    "default_icon": "images/horus_logo.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/horus_logo.png",
    "32": "images/horus_logo.png",
    "48": "images/horus_logo.png",
    "128": "images/horus_logo.png",
    "256": "images/horus_logo.png",
    "512": "images/horus_logo.png"
  },
  "web_accessible_resources": [
    "content_script/rulers.html",
    "content_script/styles.css"
  ]
}